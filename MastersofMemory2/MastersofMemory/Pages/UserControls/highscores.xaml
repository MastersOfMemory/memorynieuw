<UserControl x:Class="mastersofmemory.Pages.UserControls.highscores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mastersofmemory.Pages.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <!--Developers: Joeke de Graaf & Ynte Kuipers-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="Blue" VerticalAlignment="Bottom" Orientation="Horizontal" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center">
            <Label Content="Position:" Margin="20 0" />
            <Label Content="Player Name:" Margin="20 0" />
            <Label Content="Tile Amount:" Margin="20 0" />
            <Label Content="Score:" Margin="20 0" />
        </StackPanel>
        <StackPanel x:Name="HighScore_List" Grid.Column="1" Grid.Row="1" Background="FloralWhite">
            <ScrollViewer VerticalScrollBarVisibility="Auto">

            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
